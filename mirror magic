#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    
    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    int is_palindrome = 1; // assume yes
    for(int i = 0; i < n / 2; i++) {
        if(arr[i] != arr[n - 1 - i]) {
            is_palindrome = 0; // not a palindrome
            break;
        }
    }
    
    if(is_palindrome) {
        printf("YES");
    } else {
        printf("NO");
    }
    
    return 0;
}
